pipeline {
    agent any
    stages {
        stage('API Compile') {
            steps {
                script {
                    withMaven(maven: 'maven') {
                        sh 'mvn clean compile'
                    }
                }
            }
        }
        stage('API Testing') {
            steps {
                script {
                    withMaven(maven: 'maven') {
                        sh 'mvn test'
                    }
                }
            }
        }
        stage('API Deployment') {
            steps {
                script {
                    withMaven(maven: 'maven') {
                        sh 'mvn deploy'
                    }
                }
            }
        }
    }
}
